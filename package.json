{
  "name": "openlmis-requisition",
  "version": "0.0.1",

  "devDependencies":
  {
    "api-spec-converter":  "~1.9.0",
    "raml-to-swagger": "1.0.1",
    "raml2html": "~2.4.0",
    "uuid": "~3.0.0",
    "raml-parser": "~0.8.0",
    "command-line-args": "~3.0.0",
    "system-sleep": "~1.0.0",
    "deasync": "~0.1.9",
    "ip": "~1.1.0"
  },

  "scripts":
  {
    "runApiSpecConverter": "api-spec-converter --from raml --to swagger_2 /app/build/resources/main/api-definition-swagger.yaml > /app/build/resources/main/static/requisition/docs/api-definition.json",
    "runApiHtmlConverter": "raml2html --input /app/build/resources/main/api-definition-raml.yaml --output /app/build/resources/main/api-definition.html"
  },

  "files": [ "consul/package.json" ]
}
